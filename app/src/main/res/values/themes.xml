<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Splash" parent="Theme.MaterialElements.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Background -->
        <item name="android:windowBackground">@drawable/background_splash_home</item>
    </style>

    <style name="Theme.Login" parent="Theme.MaterialElements.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="Theme.Base" parent="Theme.MaterialElements.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.OutlinedBox.Dense" parent="@style/MaterialElements.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/bg_login_gradient_e</item>
        <item name="colorPrimaryDark">@color/bg_login_gradient_e</item>
        <item name="colorAccent">@color/bg_login_gradient_e</item>
    </style>
</resources>